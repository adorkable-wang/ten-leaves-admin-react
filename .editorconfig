root = true

# 通用规则（适用于所有文件）
[*]
charset = utf-8                  # 强制 UTF-8 编码
end_of_line = lf                 # 使用 Unix 风格的换行符（LF）
indent_style = space             # 用空格缩进
indent_size = 2                  # 缩进 2 空格（前端项目惯例）
trim_trailing_whitespace = true  # 删除行尾空格
insert_final_newline = true      # 文件末尾保留空行

# 特定文件类型规则
[*.{js,ts,jsx,tsx}]             # React + TypeScript 文件
indent_size = 2

[*.json]                         # JSON 文件
indent_size = 2

[*.md]                           # Markdown 文件
trim_trailing_whitespace = false # 行尾空格可能有意义（如换行）
